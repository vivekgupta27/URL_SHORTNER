<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <!-- TailwindCSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="max-w-2xl mx-auto py-10">
        <!-- Heading -->
        <h1 class="text-4xl font-bold text-center text-blue-600 mb-6">URL Shortener</h1>

        <% if (locals.errorMessage) { %>
            <div class="text-red-500"><%= errorMessage %></div>
        <% } %>

        <!-- Input Form -->
        <form action="/shorten" method="POST" class="flex items-center mb-8">
            <input type="url" name="fullUrl" class="flex-grow border border-gray-300 rounded-l-lg px-4 py-2 focus:outline-none" placeholder="Enter full URL" required>
            <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-r-lg hover:bg-blue-500 transition">Shorten</button>
        </form>

        <!-- Table for displaying URLs -->
        <table class="min-w-full bg-white rounded-lg overflow-hidden">
            <thead>
                <tr class="bg-blue-600 text-white">
                    <th class="py-2 px-4 text-left">Full URL</th>
                    <th class="py-2 px-4 text-left">Short URL</th>
                    <th class="py-2 px-4 text-left">Clicks</th>
                </tr>
            </thead>
            <tbody>
                  <% if(locals.shorturl){%>
                      <% shorturl.forEach(function(url){%>
                        <tr class="border-b"></tr>
                        <td class="py-2 px-4"><%=url.full%></td>
                        <td class="py-2 px-4">
                            <a  href="<%=url.short%>" class="text-blue-600 hover:underline"><%=url.short%></a>
                        </td>
                        <td class="py-2 px-4"><%=url.click%></td>
                            
                          </tr>
                    <%}) %>
                 <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
